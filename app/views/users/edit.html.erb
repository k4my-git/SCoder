<div class="container">
	<div class="row">
		<h2>Edit Profile</h2>
		<div>
			<%= form_for(@user) do |f| %>
				<% if @user.errors.any? %>
			        <%= @user.errors.count %>
			        error
			        <% @user.errors.full_messages.each do |message| %>
			            <%= message %>
			        <% end %>
				<% end %>
				<div>
					<%= f.label :name, "Name" %>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="form-group has-icon">
  					<div class="user-edit-image">
						<%= f.label :profile_image, "Image" %>
						<%= f.attachment_field :profile_image %>
						<%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100" %>
				    </div>
			   	</div>
				<%= f.submit 'Update User',{class: "btn-primary"} %>
			<% end %>
		</div>
	</div>
</div>


