<div class="container">
	<div class="row">
		<div>
			<h2>Post Code</h2>
		</div>
		<div class="form-group">
			<%= form_for(@new_code) do |c| %>
				<table class="table">
					<tr>
						<td>
							<%= c.label :code_name, "タイトル" %>
							<%= c.text_field :code_name, class: "form-control" %>
						</td>
					</tr>
					<tr>
						<td>
							<%= c.label :language, "言語" %>
							<%= c.select :language, Code.languages.keys.to_a, {include_blank: true}, {prompt: "選択してください"} %>
						</td>
					</tr>
					<tr>
						<td>
							<div class="custom-file">
								<%= c.label :file, "ソースコード", class: "custom-file-label" %>
								<%= c.file_field :file, class: "custom-file-input" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<div class="col-sm-12">
								<%= c.label :codes_explanation, "解説" %>
								<%= c.text_area :codes_explanation, rows:'5', class: "form-control" %>
							</div>
						</td>
					</tr>
					<tr>
						<td>
							<%= c.submit "投稿",class: "btn btn-default" %>
						</td>
					</tr>
				</table>
			<% end %>
		</div>
	</div>
</div>